
/*头部*/
.header {
    height: 76px;
    padding: 20px 20px 0;
}
/*搜索框*/
.searchArea {
    width: 100%;
    height: 36px;
}
.sendMessageToAll {
    width: 120px;
}
.submitFormPart {
    float: right;
}
.sendTypeSelector {
    float: left;
    width: 100px;
    margin-right: 10px;
}
.receiverTypeSelector {
    float: left;
    width: 100px;
    margin-right: 10px;
}
.searchContentInput {
    float: left;
    width: 200px;
    margin-right: 10px;
}
.searchMsgBtn {
    float: left;
    width: 80px;
}

/*创建消息*/
.createButton
{
    float: left;
    min-width: 93px;
    height: 34px;
    border-radius: 4px;
    background-color: #3a7bd5;
    margin:0 0 0 0 ;
    font:normal normal normal 14px/30px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #ffffff;
    border: none;
    text-align: center;
}

/*table区*/
.content
{
    margin: 0 20px;
}
td:nth-child(4)
{
    max-width: 300px !important;
    word-break:break-all !important;
    word-wrap:break-word !important;
    line-height: 30px!important;
}