/*头部*/
.header
{
    width: 100%;
    margin: -20px 0 0 0;
}
.header h3
{
    font:normal bold normal 14px/40px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    border-bottom: 1px solid #ececec;
    margin-left:10px;
}

/*内容区*/
.content
{
    width: 100%;
    height: 336px;
    border-bottom: 1px solid #ececec;
}
/*左侧*/
.detailArea
{
    float: left;
    width: 36%;
    height: 98%;
    margin:1px 0 0 10px;
}

.detailArea h3
{
    float: left;
    width: 50%;
    height: 30px;
    font: normal normal normal 16px/30px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    margin-top: 1px;
}
/*编辑按钮*/
#editButton
{
    position: relative;
    left:28%;
    top:3%;
    float: left;
}

/*头像*/
.avaterArea
{
    width: 100%;
    height: 60px;
    clear: both;
}
.avaterArea img
{
    width: 50px;
    height: 50px;
    margin: 5px 20px 5px 0;
    float: left;
}
.avatarText
{
    float: left;
    height: 100%;
}
.avatarTextHalf
{
    width: 100%;
    height: 50%;
}
.avatarTextHalf span
{
    display: inline-block;
    height: 100%;
    font:normal normal normal 14px/30px 'Microsoft YaHei';
    letter-spacing: -0.2px;
    color: #3e3e3e;
}
.nickname
{
    font:normal normal normal 16px/30px 'Microsoft YaHei';
    letter-spacing: -0.3px;
}
.gender
{
    margin-left: 20px;
}

/*文字*/
.info
{
    clear:both;
    width: 100%;
    height: 160px;
    margin-top: 18px;
}
.info div
{
    width: 100%;
    min-height: 30px;
    font:normal normal normal 14px/1em 'Microsoft YaHei';
    color: #666666;
}

/*竖线*/
table
{
    float: left;
    width: 1px;
    border-left:1px solid #ececec;
    height: 310px;
    background-color:#ececec;
    margin-top: 6px;
}


/*右侧*/
.purchaseArea
{
    float: left;
    width: 62%;
    height: 98%;
    margin-top:1px;
    overflow-y: auto;
    overflow-x: hidden;
}
.purchaseList
{
    float: left;
    width: 97%;
    height: 73%;
    margin-top:1px;
    overflow-y: auto;
    overflow-x: hidden;
}

.purchaseArea h3
{
    width: 50%;
    height: 30px;
    font: normal normal normal 16px/30px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    margin: 1px 0 0 20px;
}
.record
{
    width: 95%;
    margin:1px 0 0  26px;
}
.eachRecord
{
    position: relative;
    width: 100%;
    min-height: 32px;
    margin-bottom: 6px;
}
.eachRecord .time
{
    width: 152px;
    height: 20px;
    font:normal normal normal 14px/20px 'Microsoft YaHei';
    letter-spacing: -0.2px;
    color: #3e3e3e;
    margin: 5px 0 10px 0;
    float: left;
}
.each_title
{
    width: 266px;
    height: 20px;
    font:normal normal normal 14px/20px 'Microsoft YaHei';
    letter-spacing: -0.2px;
    margin: 5px 0 10px 0;
    float: left;
    color: #888;
}
.eachRecord span
{
    display: inline-block;
    font:normal normal normal 14px/1.5em 'Microsoft YaHei';
    letter-spacing: -0.2px;
    color: #888888;
    min-width: 80px;
}

.eachRecord span:nth-child(4)
{
    position: absolute;
    left:470px;
}
.eachRecord span:nth-child(5)
{
    position: absolute;
    left:570px;
}

/*底部*/
.footer
{
    width: 100%;
    min-height: 150px;
    overflow: hidden;
}
.footer h3
{
    float: left;
    width: 90%;
    height: 30px;
    font: normal normal normal 16px/30px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    margin: 3px 0 10px 10px;
}
#customerMsg
{
    float: right;
    margin: -50px 5% 0 0;
}
/*系统回复、用户消息、评论显示*/
.msgbox
{
    width: 33%;
    margin-right: 1px;
    float: left;
}
#border_lt
{
    border-left:1px solid #ececec;
}
/*自定义系统回复*/
.boxMessage
{
    width: 100%;
    max-height: 500px;
    clear: both;
    margin-top: 10px;
    overflow-y: auto;
    overflow-x: hidden;
}
.adminMessage
{
    width: 100%;
    clear: both;
    margin-top: 10px;
}
.eachAdmin
{
    width: 100%;
    overflow: hidden;
    margin: 10px 0 10px 0;
    padding-left: 10px;
}

.model_type{
    width: 60px;
    height: 35px;
    border: 1px solid #e8e8e8;
    display: inline-block;
    line-height: 35px;
    text-align: center;
    border-radius: 5px;
    margin-bottom: 10px;
    margin-right: 10px;
    cursor: pointer;
}
.border_blue{
    border: 1px solid #2e64cb;
}
.edit_model{
    width: 80px;
    height: 34px;
    border: 1px solid #e8e8e8;
    display: inline-block;
    line-height: 20px;
    text-align: center;
    border-radius: 4px;
    cursor: pointer;
    background-color: #2e64cb;
    color: white;
    margin-top: 8px;
    float: left;
    padding-top: 6px;
    padding-bottom: 6px;
}


/*检测网址的输入错误时，添加文字提醒*/
.http_error_tip{
    color: red;
    margin-left: 110px;
    padding-top: 42px;
}

