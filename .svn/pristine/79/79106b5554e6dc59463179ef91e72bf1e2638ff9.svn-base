


.mainHeader {
    height: 60px;
    line-height: 60px;
    width: 100%;
    padding-left: 20px;
    box-sizing: border-box;
    font-size: 16px;
    background: #fafbfc;
    border-bottom: 1px solid #eceff1;
}
.go_back {
    float: left;
    color: #353535 !important;
}

.mainContent {
    width: 100%;
    height: auto;
    padding: 0 20px 50px 40px;
}
.singleItem {
    width: 100%;
    margin-top: 30px;
}
.itemTitle {
    float: left;
    width: 126px;
    height: 36px;
    line-height: 36px;
    font-size: 14px;
    color: #243042;
}
.itemContent {
    float: left;
    width: 820px;
}
.startKey {
    vertical-align: top;
    position: relative;
    left: 0;
    top: 0;
    font-size: 20px;
    color: red;
    padding-left: 3px;
}

.exerciseBookNameInput {
    width: 200px;
}
.relevantCourseTip {
    color: #888888;
    font-size: 14px;
    height: 36px;
    line-height: 36px;
}
.selectorWrapper {
    width: 100%;
    height: auto;
}
.resTypeSelector {
    float: left;
    width: 150px;
    margin-right: 20px;
}
.resItemSelector {
    float: left;
    width: 200px;

}
.communitySelector {
    width: 200px;
}

/*********** 直播提醒 - start ***********/
.remindRadioWrapper {
    display: inline-block;
    font-size: 14px;
    color: #243042;
}
.remindRadio {
    height: 36px;
    line-height: 36px;
    cursor: pointer;
}
.circleRadio {
    display: inline-block;
    position: relative;
    top: 2px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 1px solid #dcdcdc;
    margin-right: 10px;
}
.radioActive {
    position: relative;
    border: 1px solid #2a75ed !important;
}
.radioActive:after {
    content: '';
    display: block;
    position: absolute;
    top: 1px;
    left: 1px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #2a75ed;
}

/*********** 直播提醒 - end ***********/


.mainFooter {
    width: 100%;
    height: auto;
    padding-left: 40px;
}
.footerBtnWrapper {
    width: 100%;
    height: 36px;
}
.cancelSaveExerciseBtn {
    margin-right: 20px;
    float: left;
}
.confirmSaveExerciseBtn {
    float: left;
}








