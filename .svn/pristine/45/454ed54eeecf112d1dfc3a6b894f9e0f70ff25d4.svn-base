.content{
    width: 80%;
    margin: 30px auto;
}
.top{
    text-align: center;
    margin: 20px 0;
    overflow: hidden;
}

.main{
    padding: 50px 90px;
    text-align: left;
    background: #fff;
    color: #333;
}
.red{
    color: red;
}
.topInfo{
    margin: 20px 0 30px;
}
.bottomInfo{
    font-size: 12px;
    margin: 60px 0 10px;
}
.title{
    text-align: center;
    font-size: 20px;
    font-weight: 600;
    color: #000000;
}
.subtitle{
    margin-top: 40px;
    padding-left: 6px;
    border-left: 3px solid #2a75ed;
    line-height: 12px;
    font-size: 14px;
    font-weight: 600;
}
.section{
    width: 100%;
    margin-top: 30px;
    line-height: 36px;
    clear:both;
    overflow:hidden;
}
.section:after{
    content:"";
    display:block;
    height:0;
    clear:both;
    visibility:hidden;
}

.section .sectionTitle{
    float: left;
    width: 120px;
}
.section .sectionInfo{
    float: left;
    width: 60%;
}
.inputDefault{
    width: 90%;
}
.line{
    height: 0px;
    width: 100%;
    border-top: 1px solid #e7e7e7;
    margin: 20px 0;
}



.checkbox {
    opacity: 0;
    width: 0;
    height: 0;
}
.checkbox-desc {
    cursor: pointer;
    position: relative;
    width: 120px;
    padding-left:25px;
    line-height: 30px !important;
    margin-bottom: 0;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    float: left;
    font-size: 14px;
    color: #666666;
}
.checkbox-include-input{
    width: 218px;
}

[type="checkbox"]+label:before {
    position: absolute;
    left: 0;
    top: 8px;
    cursor: pointer;
    display: inline-block;
    content:'\a0';
    background:#fff;
    color: #fff;
    border-radius: 3px;
    border: 2px solid #999;
    width: 15px;
    height: 15px;
    line-height: 12px;
    text-align: center;
    transition: .2s ease;
}
[type="checkbox"]:checked+label:before {
    content:'\2713'; /*对号的 Unicode字符*/
    background: #2a75ed;/*对号的颜色*/
    border-color: #2a75ed;
    font-size: 10px;
}


[type=radio].with-gap:checked+label:after {
    transform: scale(.5);
}

[type=radio]:not(:checked)+label:before {
    border: 2px solid #5a5a5a;
}
[type=radio].with-gap:checked+label:before{
    border: 2px solid #2a75ed;
}


[type=radio]+label:after, [type=radio]+label:before {
    top: 7px;
}

.flow-cost{
    border-width: 0 0 1px;
    border-color: #333;
    line-height: 22px;
    padding: 0 8px;
    width: 100px;
}