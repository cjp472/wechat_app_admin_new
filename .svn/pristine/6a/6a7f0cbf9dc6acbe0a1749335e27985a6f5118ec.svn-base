/****************************先除去base_mainContent的padding和设置背景********************/
.base_mainContent
{
    padding:0;
    background-color: #efeff4;
}
/********************************************共用标题区************************************/

/*每个块*/
.content
{
    width: 100%;

    background-color: #ffffff;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
    overflow: hidden;
}
/*块内的标题部分*/
.contentTitle
{
    width: 100%;
    height: 50px;
    font:normal normal normal 16px/50px 'Microsoft YaHei';
    color: #243042;
    border-bottom: 1px solid #f2f2f2;
    padding-left: 20px;
}
/****************************************展示信息***************************************/
.infoArea
{
    width: 100%;
    height: 34px;
    margin-top: 10px;
    font:normal normal normal 14px/34px 'Microsoft YaHei';
}
.infoLabel
{
    width: 130px;
    float: left;
    margin-left: 20px;
}
.infoValue
{
    float: left;
    margin-right: 20px;
}
.inputDefault{
    width: 200px;
}
.inputDefault[readonly]{
    border: none;
    background: #fff;
    padding-left: 0;
}

.editContent{
    display: none;
    margin-left: 20px;
}
.editContent button:first-child{ 
    vertical-align: top;
}
/*新增管理员和编辑管理员共用按钮*/
.greenButton
{
    width: 100px;
    height: 36px;
    border: none;
    border-radius: 2px;
    background-color: #2A75ED;
    color: #fff;
    text-align: center;
    font:normal normal normal 14px/30px 'Microsoft YaHei';
    margin: 20px 0 20px 20px;
    outline: none;
}
/*新增子账号按钮*/
#addAdminUser
{
    margin:20px 0 0 20px;
}
/***************************************Modal里的输入*******************************************/
.inputArea
{
    width: 100%;
    height: 34px;
    margin-top: 30px;
}
.inputLabel
{
    width: 100px;
    float: left;
    line-height: 34px;
    margin-left: 50px;
}
/*检验账户唯一性的图片*/
.checkImg
{
    position: absolute;
    width: 20px;
    height: 20px;
    top:7px;
    left: 420px;
}