a{
    color: #333;
}
input[type=checkbox], input[type=radio]{
    width: 16px;
    height: 16px;
    margin: 0;
    cursor: pointer;
}
label{
    cursor: pointer;
}


a:hover{
    color: #333;
}

.base_mainContent {
    padding: 0 0 20px 0;
}

.btn-default {
    margin: 0;
}

/*活动报名头部*/
.contentHeader {
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #f2f2f2;
    background-color: #fafbfc;
    padding-left: 20px;
    font-size: 16px;
}

/*按钮小*/
.btnSmall {
    float: left;
    width: 90px;
    height: 36px;
    padding: 0;
    text-align: center;
    line-height: 36px;
    border-radius: 2px;
    cursor: pointer;
}

/*按钮中*/
.btnMid {
    float: left;
    width: 100px;
    height: 36px;
    padding: 0;
    text-align: center;
    line-height: 36px;
    border-radius: 2px;
    cursor: pointer;
}

/*按钮*/
.xeBtnDefault {
    color: #243042;
    background: #fafbfc;
    border: 1px solid #dcdcdc;
}

.xeBtnDefaultDown {
    background: #e0e1e2 !important;
}

.xeBtnDefault:hover {
    background: #edeeef;
}

/*蓝色按钮*/
.btnBlue {
    color: white;
    background: #2a75ed;
    border: none;
}

.btnBlue:hover {
    background: #2e63dc;
}

.btnBlueDown {
    background: #2e5ecb !important;
}

/*红色按钮*/
.btnRed {
    color: white;
    background: #e64340;
    border: none;
}

.btnRed:hover {
    background: #de0028;
}

.btnRedDown {
    background: #c60024 !important;
}

/*活动搜索框*/
.SearchInput {
    float: left;
    width: 240px;
    height: 36px;
    border: 1px solid #dcdcdc;
    padding: 8px;
    font-size: 14px;
    border-radius: 2px;
}

/*活动导航栏*/

.activeNav {
    height: 36px;
    border-bottom: 1px solid #dcdcdc;
    margin: 20px 20px 0 20px;
}

.activeNavPart {
    width: 120px;
    height: 36px;
    line-height: 36px;
    float: left;
    text-align: center;
    font-size: 14px;
    color: #333;
    background-color: #fafbfc;
    border: solid 1px #dcdcdc;
    margin-left: -1px;
}

.activeNavPartActive {
    border-bottom: none;
    background-color: white;
}

.contentNoneTip {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    margin-top: 50px;
    color: #888;
    font-size: 16px;
}