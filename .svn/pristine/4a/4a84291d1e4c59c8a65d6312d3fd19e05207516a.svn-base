.base_mainContent {
    padding: 0;
}

.header {
    width: 100%;
    height: 62px;
    line-height: 62px;
    padding-left: 20px;
    background-color: #fafbfc;
    border-bottom: 1px solid #f2f2f2;
}

.header_level {
    height: 62px;
    float: left;
    margin-right: 7px;
    font-size: 16px;
}

.header_level.left {
    cursor: pointer;
}

.upload_item_div {
    margin-top: 35px;
    padding-left: 50px;
}

.upload_item_title {
    width: 130px;
    display: inline-block;
    padding-top: 10px
}

.upload_input_div {
    display: inline-block;
    vertical-align: top;
}
.upload_input_msg {
    margin-top: 10px;
    font-size: 12px;
    color: rgb(184, 184, 184);
}
.selectPrice {
    width: 180px;
    height: 36px;
    border-radius: 2px;
    background-color: #ffffff;
    border: solid 1px #e1e6f0;
}
/*弹出框样式修改*/
.xcConfirm .popBox .txtBox p {
    text-align: center;
    line-height: 150%;
}
.xcConfirm .popBox .btnGroup {
    margin: 0 auto;
    text-align: center;
    float: none;
}
.xcConfirm .popBox .sgBtn {
    float: none;
    display: inline-block;
}

/*选择分类导航 - start*/
.category {
    padding-top: 0;
    height: 20px;
}
.radio_label {
    margin:0 20px 0 0;
}
.checkBoxWrapper{
    width: 80px;
    height: 20px;
    margin-right: 16px;
    display: inline-block;
    vertical-align: top;
    position: relative;
}
input.radio_category {
    visibility: hidden;
    vertical-align: top;
    width: 16px;
    height: 0px;
    margin-left: -10000px;
}
.radio_category + label.checkboxLabel{
    display: inline-block;
    position: absolute;
    width: 12px;
    height: 12px;
    top: 4px;
    left: 0;
    background: url("/images/check_box_3_states.svg") left center;
}
.radio_category:checked + label.checkboxLabel{
    background: url("/images/check_box_3_states.svg") -24px center;
}
.checkboxText{
    position: absolute;
    left: 16px;
    top: 1px;
}

/*选择分类导航 - end*/

.upload_input_prompt {
    margin-top: -3px;
    font-size: 12px;
    color: #d3afaf;
}

.upload_type {
    width: 60px;
    height: 40px;
    border: 1px solid #e8e8e8;
    display: inline-block;
    line-height: 40px;
    text-align: center;
    border-radius: 5px;
    margin-bottom: 10px;
    margin-right: 10px;
    cursor: pointer;
}
.border_blue{
    border: 1px solid #2e64cb;
}


