/*视频上传进度*/
.progress_div {
    margin-top: 10px;
}

.progress_bar {
    width: 200px;
    height: 8px;
    background-color: #f5f5f5;
    border-radius: 5px;
    display: none;
    /*display: inline-block;*/
}

.bar {
    width: 0px;
    height: 8px;
    border-radius: 5px !important;
    background: #5EC4EA;
    display: block;
}
.delete{
    cursor: pointer;
    font-size: 12px;
    margin-left: 5px;
}
.delete:hover{
    color:#2c9de4;
}

.upload_finish {
    font-size: 12px;
    display: none
}
