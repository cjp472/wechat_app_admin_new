
.content{
    padding: 20px 20px 30px;
    width: 100%;
    overflow: hidden;
    background-color: #fff;
}

.topBox{
    line-height: 40px;
    font-size: 14px;
    color: #243042;
    padding-left: 5px;
    border-bottom: 1px solid #eee;
}

.topBox a{
    font-size: 14px;
    line-height: 40px;
    color: #243042;
}

.proj-main{
    font-size:14px;
    margin-left: 130px;
    margin-top: 40px;
}

.choose-box{
    background-color: #fafbfc;
    border: solid 1px #e3e3e3;
    width: 340px;
    padding: 40px 35px;
    box-sizing: border-box;
    float: left;
}

.choose-box-left{
    margin-right: 80px;
}

.hd-icon-wrap{
    text-align: center;
    margin-bottom: 20px;
}

.hd-icon-wrap img {
    width: 55px;
    height: 55px;
    border-radius: 100%;
}

.hd-title{
    font-size: 20px;
    text-align: center;
    line-height: 1.4;
    margin-bottom: 46px;
}

.hd-tips{
    font-size: 12px;
    color: #a3abba;
    line-height: 1.4;
    margin-bottom: 20px;
}

.box-content{
    text-align: left;
    font-size: 12px;
    line-height: 17px;
    margin-bottom: 40px;
}

.box-content-item{
    margin-top: 17px;
    white-space: nowrap;
}

.btn-wrap{
    text-align: center;
}

.bindNow{
    cursor: pointer;
    display: inline-block;
    width: 200px;
    border-radius: 2px;
    background-color: #2A75ED;
    text-align: center;
    font:normal normal normal 18px/52px 'Microsoft YaHei';
    color: #fff;
    text-decoration: none;
    line-height: 1;
    padding: 12px 0;
}

.bindNow:hover{
    color: #fff;
}

.agent-register-box{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: none;
    z-index: 100;
    transition: all 1s;
}

.agent-box-mb{
    position: relative;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.3);
}

.agreement-box-main{
    position: absolute;
    width: 560px;
    height: 600px;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    border-radius: 4px;
    background-color: #ffffff;
    padding: 30px;
    padding-top: 40px;
}

.agreement-box{
    width: 100%;
    height: 430px;
    background-color: #ffffff;
    border: solid 1px #e5e5e5;
    overflow-y: scroll;
    overflow-x: hidden;
    padding: 20px;
    margin-bottom: 20px;
}

.agreement-title{
    padding-top: 10px;
    text-align: center;
    font-size: 20px;
    line-height: 1;
    margin-bottom: 30px;
}

.agreement-cnt{
    font-size: 14px;
    line-height: 2;
}

.checkbox-wrap{
    text-align: center;
    margin-bottom: 20px;
}

.agreement-button-wrap{
    text-align: center;
}

.checkbox-default{
    vertical-align: text-top;
}

.bindNow:hover, .bindNow:active{
    color: #fff;
}


.bindNow[disabled]:hover, .bindNow[disabled]{
    opacity: 0.3;
    border-radius: 2px;
    background-color: #2a75ed;
}

/*授权状态弹框*/
.bindSuccess {
    width: 140px;
    height: 42px;
    border-radius: 2px;
    background-color: #2fce6f;
    font-size: 14px;
    line-height: 40px;
    outline: 0;
    border: none;
    text-align: center;
    color: #fff;
    margin-right: 12px;
}

.bindFail {
    width: 140px;
    height: 42px;
    border-radius: 2px;
    background-color: #fff;
    border: solid 1px #979797;
    font-size: 14px;
    line-height: 40px;
    outline: 0;
    text-align: center;
    color: #000;
}

.modal-footer {
    text-align: center;
}
