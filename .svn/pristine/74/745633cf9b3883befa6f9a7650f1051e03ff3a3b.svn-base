
li {
    list-style: none;
}


.mainHeader {
    width: 100%;
    height: 76px;
    padding: 20px;
    margin-top: 50px;
}
.createExerciseBookBtn {
    float: left;
    margin-right: 20px;
}
.exerciseHelpDoc {
    float: left;
    height: 36px;
    line-height: 36px;
    color: blue;
}
.submitSearchPart {
    height: 36px;
    float: right;
}
.searchContentInput {
    width: 200px;
    float: left;
    margin-right: 20px;
}
.submitSearchBtn {
    float: left;
}


.mainContent {
    width: 100%;
    padding: 0 20px 50px;
    height: auto;
}
.tableHeader {
    width: 100%;
    height: 50px;
    background: #cccccc;
}
.tableHeader > div {
    width: 20%;
    height: 50px;
    line-height: 50px;
    float: left;
}
.tableHeader > div:nth-child(1) {
    text-align: left;
    padding-left: 20px;
}
.tableHeader > div:nth-child(4) {
    width: 10%;
}
.tableHeader > div:nth-child(5) {
    width: 10%;
    text-align: center;
}
.tableHeader > div:nth-child(6) {
    text-align: center;
}

.tableContent {
    width: 100%;
    padding: 0;
}
.exerciseBookItem {
    width: 100%;
    height: 70px;
    padding: 20px 0;
    line-height: 30px;
    border-bottom: 1px solid #cccccc;
}
.exerciseBookItem > div {
    width: 20%;
    height: 30px;
    line-height: 30px;
    float: left;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.exerciseBookItem > div:nth-child(1) {
    text-align: left;
    padding-left: 20px;
}
.exerciseBookItem > div:nth-child(4) {
    width: 10%;
}
.exerciseBookItem > div:nth-child(5) {
    width: 10%;
    text-align: center;
}

/*********************** 操作部分 -start *************************/
.exerciseBookItem .exerciseBookOperateArea {
    text-align: center;
}
.operateList {
    height: 30px;
    width: 180px;
    margin: 0;
    padding: 0;
    display: inline-block;
}
.operateList > li {
    float: left;
}
.operateList > li.operate {
    color: blue;
    cursor: pointer;
}
.operateList > li.verticalGapLine {
    color: #cccccc;
}

/*********************** 操作部分 -end*************************/

/*********************** 人员管理窗口 - start *************************/
.roleManageWindow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 600px;
    height: 480px;
    margin-top: -260px;
    margin-left: -300px;
    z-index: 10000;
    background-color: #fff;
    display: none;
}
.windowHeader {
    height: 52px;
    line-height: 52px;
    background-color: #fafbfc;
    border-bottom: solid 1px #f2f2f2;
}
.headerText1 {
    font-size: 16px;
    color: #353535;
    margin-left: 20px;
}
.headerText2 {
    font-size: 14px;
    color: #888888;
    margin-left: 10px;
}
.windowCloseIcon {
    width: 12px;
    height: 12px;
    margin: 20px 20px 0;
    float: right;
}
.windowCloseIcon>img {
    width: 100%;
    height: 100%;
    float: left;
    cursor: pointer;
}

.windowContent {
    width: 100%;
    height: 300px;
}


.windowFooter {
    width: 100%;
    height: auto;
    padding-left: 40px;
}
.windowFooterTip {
    color: #888888;
    font-size: 14px;
    height: 36px;
    line-height: 36px;
}
.footerBtnWrapper {
    width: 100%;
    height: 36px;
}
.addExerciseBookRoleBtn {
    margin-right: 20px;
    float: left;
    position: relative;
}
.addExerciseBookRoleBtn:hover .windowHoverBox {
    display: block;
}
.windowHoverBox {
    display: none;
    position: absolute;
    bottom: 36px;
    left: 0;
    width: 100px;
    height: 72px;
}
.windowHoverBox > div {
    height: 36px;
    line-height: 36px;
    text-align: center;
    color: blue;
    cursor: pointer;
    border: 1px solid #00a0e9;
    border-bottom: none;
}
.confirmSaveRoleBtn {
    float: left;
}



/*********************** 人员管理窗口 - end *************************/








