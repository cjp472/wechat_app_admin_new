//更新分享信息
function updateShareInfo(){
    $.post("/updateshareinfo",{"params":params},function(data) {
        hideLoading();
        if(data.code==0) {
            baseUtils.show.blueTip(data.msg,function()
            {
                window.location.reload();
            });
        } else {
            baseUtils.show.redTip(data.msg);
        }
    });
}





