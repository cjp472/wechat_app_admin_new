.base_right{
    height: 100%;
    background-color: #efeff4;
}

.base_content{
    padding: 20px;
}

.base_mainContent{
    padding: 0;
    margin-bottom: 20px;
    background-color: white;
    font: normal normal normal 16px/62px 'Microsoft YaHei';
}


/*标题栏 - start*/
.header {
    width: 100%;
    height: 60px;
    background-color: #fafbfc;
    border-bottom: 1px solid #f2f2f2;
    padding-left: 23px;
}

.header_level{
    float: left;
}

.home_page.header_level{
    cursor: pointer;
}
/*标题栏 - end*/

.content{
    background: white;
}

.content_title {
    width: 100%;
    height: 60px;
    line-height: 20px;
    padding: 20px;
    font-size: 14px;
    color: #243042;
}

.transaction{
    float: left;
    margin-right: 30px;
}


/*表格*/

.table_flow_detail{
    width: 100%;
    text-align: center;
    font-size: 14px;
}

.tr_head{
    width: 100%;
    height: 40px;
    line-height: 40px;
}

.tr_head th{
    text-align: center;
    background: white;
    min-width: 100px;
    font-size: 14px;
}

.tr_head .th_resource_type{
    width: 100px;
}
.tr_head .th_resource_name{
    text-align: left;
    padding-left: 20px;
}
.th_resource_size{

}
.th_new_visitor_num{

}
.th_fee{

}

.tr_body{
    width: 100%;
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #f2f2f2;
}

.tr_body:hover{
    background-color: #F5F5F5;
}

.td_resource_name{
    width: 40%;
    min-width: 200px;
    padding-left: 20px;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.td_resource_size{
    width: 20%;
    min-width: 200px;
}

.td_new_visitor_num{
    width: 20%;
    min-width: 200px;
}

.td_fee{
    width: 20%;
    min-width: 200px;
}

/*hover弹窗提示 - start*/
.resource_size_area {
    height: 100%;
    width: 100%;
}

.resource_size_wrapper{
    width: 150px;
    height: 20px;
    margin: 20px auto;
    padding-left: 40px;
}

.resource_size_num{
    height: 20px;
    line-height: 20px;
    float: left;
    font-size: 14px;
    color: #353535;
}

.hover_prompt_icon_wrapper{
    width: 12px;
    height: 12px;
    margin: 4px 0 4px 6px;
    float: left;
}
.hover_prompt_icon{
    width: 100%;
    height: 100%;
    float: left;
}
/*hover弹窗提示 - end*/

.td_play_number{

}
.td_flow_discount{

}
.td_flow_consume{

}

/*hover 弹出框 - start*/
.hover_prompt{
    display: none;
    height: 96px;
    z-index: 100;
    position: absolute;
    top: 500px;
    left: 200px;
    background-color: white;
    box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1);
    border-top: 1px solid #e3e3e3;
}
.hover_prompt_wrapper{
    height: 56px;
    margin: 20px 0 20px 20px;
}

.two_size_wrapper{
    height: 28px;
    line-height: 28px;
    color: #757575;
    margin-right: 20px;
}

.compressed_size{
    height: 28px;
    line-height: 28px;
    color: #353535;
}
.original_size{
    height: 28px;
    line-height: 28px;
    color: #757575;
}

.image_size{
    height: 28px;
    line-height: 28px;
    color: #353535;
    margin-right: 20px;
}
/*hover 弹出框 - end*/


.list-page{
    margin-right: 0;
}








