/*头部*/
.header
{
    margin: 0 20px;
}
/*搜索*/
.searchArea
{
    width: 100%;
    height:34px;
    margin: 10px 0 20px 0;
}
.searchButtonArea
{
    float: right;
}
.searchInputArea
{
    float:right;
}
.searchSelectArea
{
    float: right;
    margin-right:10px;
}


/*table*/
.content
{
    margin: 0 20px;
}
/*头像及昵称*/
th:nth-child(1),td:nth-child(1)
{
    text-align: left;
}
.avatar
{
    width: 50px;
    height: 50px;
    border-radius: 2px;
    /*margin: 10px 11px 10px 0;*/
    cursor: pointer;
}
.nickname
{
    font:normal normal normal 14px/1.5em 'Microsoft YaHei';
    letter-spacing: -0.3px;
}


.model_type{
    width: 60px;
    height: 35px;
    border: 1px solid #e8e8e8;
    display: inline-block;
    line-height: 35px;
    text-align: center;
    border-radius: 5px;
    margin-bottom: 10px;
    margin-right: 10px;
    cursor: pointer;
}
.border_blue{
    border: 1px solid #2e64cb;
}
.edit_model{
    width: 100px;
    height: 36px;
    display: inline-block;
    border: 1px solid #e8e8e8;
    line-height: 20px;
    text-align: center;
    border-radius: 4px;
    cursor: pointer;
    background-color: #2e64cb;
    color: white;
    float: left;
    margin-top: 0;
    padding-top: 6px;
    padding-bottom: 6px;
}

/*检测网址的输入错误时，添加文字提醒*/
.http_error_tip{
    color: red;
    margin-left: 110px;
    padding-top: 42px;
}

#sms_nickname{
    margin-bottom: 20px;
    height: 36px;
    border-radius:1px;
}

#sms_content{
    resize: none;
    height: 111px;
    width: 100%;
    border-radius:1px;
}

#link_name{
    margin-bottom: 20px;
    height: 36px;
    border-radius:1px;
}

#link_type_selector{
    height: 36px;
    border-radius:1px;
}

#skip_target_selector{
    height: 36px;
    border-radius:1px;
}

#skip_target_input{
    width: 478px;
    height: 36px;
    border-radius:1px;
}

.sendAtOnce_Button{
    width: 100px;
    height: 36px;
}

.cancel_Button{
    width: 100px;
    height: 36px;
    margin-left: 25px
}













