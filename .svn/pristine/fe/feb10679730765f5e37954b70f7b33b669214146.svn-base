
.base_mainContent {
    padding: 0;
    min-height: 750px;
}

.content {
    width: 100%;
    height: 100%;
    padding: 10px 50px;
}

/*所有功能条目*/
.function_item {
    height: 118px;
    margin: 10px 0;
    padding: 20px;
    background-color: #f9f9f9;
    border: solid 1px #efefef;
}

.function_content {
    float: left;
    height: 78px;
}
.function_title {
    height: 22px;
    line-height: 22px;
    font-size: 16px;
}
.function_desc {
    height: 24px;
    line-height: 24px;
    margin-top: 10px;
    font-size: 12px;
}
.function_help_doc {
    height: 17px;
    line-height: 17px;
    margin-top: 5px;
    font-size: 12px;
    color: #2a75ed;
    cursor: pointer;
}
.function_help_doc:hover {
    color: #2e63dc;
}

.function_operate {
    float: right;
    height: 78px;
}
.function_edit {
    height: 78px;
    line-height: 78px;
    float: left;
    color: #2a75ed;
    font-size: 14px;
    cursor: pointer;
}
.vertical_gap_line {
    width: 1px;
    height: 40px;
    margin: 19px 20px;
    background-color: #dcdcdc;
    float: left;
}

/*开关 的 状态*/
.function_switch_on {
    width: 80px;
    height: 40px;
    margin: 19px 0;
    float: left;
    border-radius: 20px;
    cursor: pointer;
    background-color: #2FCE6F;
}
.function_switch_off {
    width: 80px;
    height: 40px;
    margin: 19px 0;
    float: left;
    border-radius: 20px;
    cursor: pointer;
    background-color: #c2c2c2;
}

.function_switch_desc_on {
    height: 40px;
    line-height: 40px;
    float: left;
    font-size: 14px;
    color: #ffffff;
    position: relative;
    top: 0;
    left: 9px;
}
.function_switch_desc_off {
    height: 40px;
    line-height: 40px;
    float: left;
    font-size: 14px;
    color: #ffffff;
    position: relative;
    top: 0;
    left: 44px;
}

.switch_button_icon_on {
    width: 36px;
    height: 36px;
    margin: 2px;
    background-color: white;
    border-radius: 18px;
    position: relative;
    top: 0;
    left: 40px;
}
.switch_button_icon_off {
    width: 36px;
    height: 36px;
    margin: 2px;
    background-color: white;
    border-radius: 18px;
    position: relative;
    top: 0;
    left: 0;
}

/*关闭提示 - start*/
.close_category_prompt {
    width: 100%;
    height: 100%;
}

.close_category_prompt_bg{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1050;
    background: rgba(0,0,0,0.7);
}

.close_category_prompt_wrapper{
    width: 540px;
    height: 266px;
    z-index: 1060;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-left: -270px;
    margin-top: -133px;
    border-radius: 10px;
    background-color: white;
}

.prompt_image_wrapper {
    width: 60px;
    height: 60px;
    margin: 40px 240px 0;
}

.prompt_image {
    width: 60px;
    height: 60px;
    float: left;
}

.close_category_prompt_title{
    width: 540px;
    height: 20px;
    line-height: 20px;
    margin-top: 20px;
    text-align: center;
    font-size: 20px;
    color: #353535;
}

.close_category_prompt_desc {
    width: 540px;
    height: 20px;
    line-height: 20px;
    margin-top: 10px;
    font-size: 14px;
    color: #243042;
    text-align: center;
}

.cancel_category_btn, .cancel_edit_btn {
    position: absolute;
    bottom: 30px;
    left: 160px;
}

.confirm_category_btn, .edit_at_once_btn {
    position: absolute;
    bottom: 30px;
    right: 160px;
}

/*关闭提示 - end*/

/*蓝色提示 - start*/
.open_category_prompt {
    width: 100%;
    height: 100%;
}

.confirm_open_btn {
    position: absolute;
    bottom: 30px;
    left: 50%;
    margin-left: -50px;
}
/*蓝色提示 - end*/











