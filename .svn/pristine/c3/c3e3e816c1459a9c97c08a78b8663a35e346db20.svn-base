
.base_mainContent {
    padding:0;
    font:normal normal normal 16px/62px 'Microsoft YaHei';
}

.content {
    min-height: 600px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.header {
    width: 100%;
    height: 62px;
    line-height: 62px;
    padding-left: 20px;
    background-color: #fafbfc;
    border-bottom: 1px solid #f2f2f2;
}

.header_level {
    height: 62px;
    float: left;
    margin-right: 7px;
}

.header_level.left {
    cursor: pointer;
}