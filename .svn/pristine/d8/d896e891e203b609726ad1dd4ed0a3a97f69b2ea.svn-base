     */
    public static function isOpenStatus($app_id) {
        $user = DB::connection('mysql')->table('t_users')->where('app_id', $app_id)
            ->orderBy('wx_union_id', 'desc')->first();

        if (!empty($user) && count($user) >0 && !empty($user->wx_union_id)) {
            return true;
        }
        return false;
    }

