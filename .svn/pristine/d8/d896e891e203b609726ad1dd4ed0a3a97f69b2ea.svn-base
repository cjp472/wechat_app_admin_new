    /**
     * 获取更新时间和当前时间 的 时间间隔描述
     * @param $timeStamp
     * @return string
     */
    public static function getTimeIntervalString($timeStamp) {

        $timeStamp = strtotime($timeStamp);
        $interval = time() - $timeStamp;
        if ($interval < 60) {
            return $interval . "秒前";
        }

    }
