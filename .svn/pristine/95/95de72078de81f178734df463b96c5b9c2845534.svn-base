*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
body {
    background-color: #F9F9F9;
    font-family: "Microsoft Yahei", Helvetica, Tahoma, Arial, "Hiragino Sans GB", "Hiragino Sans GB W3",  STXihei, STHeiti, Heiti, SimSun, sans-serif!important;
}
/*超链接*/
a {
    text-decoration: none !important;
    cursor: pointer !important;
}
/* 图片设置最大宽度 */
img{
    /*max-width: 95%;*/
    max-width: 800px;
}
.base_slide {
    position: fixed;
    width: 180px;
    height: 100%;
    text-align: center;
    background-color: #3b424c;
    overflow-x:hidden ;
    overflow-y:auto;
    color: white;
}
/*滚动条宽度设置*/
.base_slide::-webkit-scrollbar{
    width:0;
}

.base_logo_div {
