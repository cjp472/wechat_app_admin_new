.base_right {
    position: absolute;
    left: 180px;
    right: 0
}

.base_topBar {
    position: fixed;
    height: 50px;
    width: 100%;
    line-height: 50px;
    z-index: 1040;
    background-color: #fff;
    border-bottom: 1px solid #ececec!important;
    /*box-shadow: 0 0 4px 0 rgba(189, 189, 189, 0.5)*/
    padding-right: 10px;
}



.base_explain{
    float: left;
    margin-left: 20px;
    height: 100%;
}
.base_explain span{
    display: inline-block;
    font-size: 18px;
    color: #333;
}


.base_content {
    position: relative;
    top: 50px;
    width: 100%;
    padding: 15px;
    background-color: #F9F9F9;
}

.base_mainContent {
    padding: 10px 20px 30px;
    background-color: #fff;
    min-height: 300px;
}

.base_header{
    display: none;
    height: 200px;
}


.show{
    display: block;
}
.hide{
    display: none;
}


#base_loading {
    position: fixed;
    z-index: 10000;
    display: none;
    background: hsla(0,0%,100%,.7);
    width: 100%;
    height: 100%;
    left: 180px;
    top: 0;
    text-align: center;
    overflow: hidden;
}
#base_loading .loadingContent{
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    margin-left: -80px;
    margin-top: -33px;
}
#base_loading .loadingText{
    text-align: center;
    color: #20a0ff;
    font-size: 14px;
}
#base_loading .circular {
    width: 42px;
    height: 42px;
    -webkit-animation: loading-rotate 2s linear infinite;
    -moz-animation: loading-rotate 2s linear infinite;
    animation: loading-rotate 2s linear infinite;
}
#base_loading .path {
    stroke-dasharray: 90,150;
    stroke-dashoffset: 0;
    stroke-width: 2;
    stroke: #20a0ff;
    stroke-linecap: round;
    -webkit-animation: loading-dash 1.5s ease-in-out infinite;
    -moz-animation: loading-dash 1.5s ease-in-out infinite;
    animation: loading-dash 1.5s ease-in-out infinite;
}
@keyframes loading-dash{
    0% {
        stroke-dasharray: 1,200;
        stroke-dashoffset: 0;
    }
    50% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -40px;
    }
    100% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -120px;
    }
}
@-moz-keyframes loading-dash{
    0% {
        stroke-dasharray: 1,200;
        stroke-dashoffset: 0;
    }
    50% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -40px;
    }
    100% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -120px;
    }
}
@-webkit-keyframes loading-dash{
    0% {
        stroke-dasharray: 1,200;
        stroke-dashoffset: 0;
    }
    50% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -40px;
    }
    100% {
        stroke-dasharray: 90,150;
        stroke-dashoffset: -120px;
    }
}
@keyframes loading-rotate{
    100% {
        -webkit-transform: rotate(1turn);
        -moz-transform: rotate(1turn);
        transform: rotate(1turn);
    }
}
@-webkit-keyframes loading-rotate{
    100% {
        -webkit-transform: rotate(1turn);
        -moz-transform: rotate(1turn);
        transform: rotate(1turn);
    }
}
@-moz-keyframes loading-rotate{
    100% {
        -webkit-transform: rotate(1turn);
        -moz-transform: rotate(1turn);
        transform: rotate(1turn);
    }
}

@media (min-width: 500px) {
    .pcContent {
        display: block;
    }

    .mobileContent {
        display: none;
    }
}

@media (max-width: 500px) {
    .pcContent {
        display: none;
    }

    .mobileContent {
        display: block;
    }
}

.mobileContent{
    width: 100%;
    height: auto;
}

.moblie_top{
