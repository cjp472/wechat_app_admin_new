/****************************先除去base_mainContent的padding和设置背景********************/
.base_mainContent
{
    padding:0;
}

/*每个块*/
.content {
    width: 100%;
    overflow: hidden;
    position: relative;
    min-height: 650px;
    padding-left: 20px;
    padding-bottom: 30px;
}
/*每行输入*/
.inputArea {
    width: 100%;
    margin-top: 40px;
    font:normal normal normal 14px/34px 'Microsoft YaHei';
}
.inputLabel {
    position: relative;
    width: 130px;
    float: left;
    margin-left: 20px;
}
.inputValue {
    float: left;
}
.necess{
    position: absolute;
    top: -4px;
    margin-left: 3px;
    vertical-align: top;
    font-size: 14px;
    color: red;
}
.bottomLine{
    height: 0;
    width: 570px;
    border-bottom: 1px solid #f2f2f2;
    margin: 30px 20px 0;
}
/*保存按钮*/
.btn-save
{
    margin: 30px 0 30px 150px;
}

.radioBtn{
    display: inline-block;
}

/*清除浮动*/
.clearfix:after {
    content: "";
    display: table;
    clear: both;
}
.clearfix {
    zoom: 1;
}

.radiobox{
    margin-left: 150px;
    margin-top: 5px;
}
